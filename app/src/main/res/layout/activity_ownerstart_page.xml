<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    >

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:src="@drawable/d"
        android:scaleType="centerCrop"
        app:layout_constraintHeight_percent="0.37"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0"
        android:id="@+id/imageView2"/>

    <androidx.constraintlayout.widget.ConstraintLayout

        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintHeight_percent=".68"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1"
        android:background="@drawable/vie_bg"
        android:id="@+id/constraintLay"
        >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@drawable/married"
            android:layout_marginBottom="30dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHeight_percent=".78"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.157"
            ></ImageView>

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context=".OwnerStartPage"
            android:orientation="vertical"
            android:layout_marginTop="150dp"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="I already have an account"
                android:layout_gravity="center"
                android:textSize="20sp"
                android:layout_marginBottom="30dp"
                android:fontFamily="@font/mavenpro_variablefont_wght"></TextView>
            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="Logın"
                android:id="@+id/login"
                android:layout_gravity="center"
                android:textSize="16sp"
                android:background="@drawable/button_bg"
                android:textColor="@color/white"
                android:layout_marginBottom="50dp"
                android:fontFamily="@font/mavenpro_variablefont_wght"></androidx.appcompat.widget.AppCompatButton>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="I don't have an account"
                android:layout_gravity="center"
                android:textSize="20sp"
                android:layout_marginBottom="30dp"
                android:fontFamily="@font/mavenpro_variablefont_wght"></TextView>
            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="Regıster"
                android:id="@+id/register"
                android:layout_gravity="center"
                android:textSize="16sp"
                android:background="@drawable/button_bg"
                android:textColor="@color/white"
                android:fontFamily="@font/mavenpro_variablefont_wght"></androidx.appcompat.widget.AppCompatButton>
        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>