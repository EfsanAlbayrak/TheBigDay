<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    >

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:src="@drawable/d"
        android:scaleType="centerCrop"
        app:layout_constraintHeight_percent="0.37"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0"
        android:id="@+id/imageView2"/>

    <androidx.constraintlayout.widget.ConstraintLayout

        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintHeight_percent=".68"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1"
        android:background="@drawable/vie_bg"
        android:id="@+id/constraintLay"
        >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@drawable/married"
            android:layout_marginBottom="30dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHeight_percent=".78"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.157"
            ></ImageView>

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context=".OwnerStartPage"
            android:orientation="vertical"
            android:layout_marginTop="150dp"
            >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="EDIT WEDDING"
        android:id="@+id/nameUpdate"
        android:textSize="22dp"
        android:fontFamily="@font/mavenpro_variablefont_wght"
        android:layout_gravity="center"></TextView>
    <EditText
        android:layout_width="300dp"
        android:layout_height="35dp"
        android:layout_margin="10dp"
        android:background="@drawable/edittext_bg"
        android:padding="15px"
        android:layout_gravity="center"
        android:hint="Place"
        android:fontFamily="@font/mavenpro_variablefont_wght"


        android:id="@+id/placeUpdate"></EditText>
    <EditText
        android:layout_width="300dp"
        android:layout_height="35dp"
        android:layout_margin="10dp"
        android:background="@drawable/edittext_bg"
        android:hint="Date"
        android:layout_gravity="center"
        android:fontFamily="@font/mavenpro_variablefont_wght"
        android:padding="15px"
        android:id="@+id/dateUpdate"></EditText>
    <EditText
        android:layout_width="300dp"
        android:layout_height="35dp"
        android:layout_margin="10dp"
        android:background="@drawable/edittext_bg"
        android:hint="Hour"
        android:fontFamily="@font/mavenpro_variablefont_wght"
        android:layout_gravity="center"
        android:padding="15px"
        android:id="@+id/hourUpdate"></EditText>
    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Update"
        android:id="@+id/updateButton"
        android:layout_gravity="center"
        android:fontFamily="@font/mavenpro_variablefont_wght"
        android:background="@drawable/button_bg"
        android:textColor="@color/white"
        android:layout_marginTop="20px"></androidx.appcompat.widget.AppCompatButton>

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>